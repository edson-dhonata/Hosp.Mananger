@model HospManager.Domain.Entities.EstadoPaciente

@{
    ViewData["Title"] = "Adicionar Estado do Paciente";
}


<partial name="PartialViews/_cabecalho" />


<div class="row">

    <div class="panel panel-success">

        <div class="panel panel-heading">
            <h3>Adicionar Estado do Paciente</h3>
        </div>

        <div class="panel panel-body">
            <form asp-controller="EstadoPaciente" asp-action="Create">

                @* Verifica se o model está valido com base nas datas annotations, opção All para todos os atributos.*@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" placeholder="Digite a descrição..." class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Adicionar Estado Paciente" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>

</div>

<div>
    <a class="btn btn-default" asp-controller="EstadoPaciente" asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}